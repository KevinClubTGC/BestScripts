local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "AkunAntiLagGUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- Frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 220, 0, 100)
frame.Position = UDim2.new(0, 20, 1, -180)
frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
frame.BorderSizePixel = 0
frame.Parent = screenGui
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 12)

-- Título arcoíris
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, -10, 0, 28)
title.Position = UDim2.new(0, 5, 0, 5)
title.BackgroundTransparency = 1
title.Font = Enum.Font.GothamBold
title.Text = "LUMORA ANTI LAG"
title.TextSize = 18
title.TextColor3 = Color3.new(1,1,1)
title.Parent = frame

local hue = 0
RunService.Heartbeat:Connect(function(dt)
	hue = (hue + dt * 0.3) % 1
	title.TextColor3 = Color3.fromHSV(hue, 1, 1)
end)

-- Alerta
local alertLabel = Instance.new("TextLabel")
alertLabel.Size = UDim2.new(1, 0, 0, 20)
alertLabel.Position = UDim2.new(0, 0, 0, -25)
alertLabel.BackgroundTransparency = 1
alertLabel.Text = ""
alertLabel.TextColor3 = Color3.fromRGB(255, 0, 0)
alertLabel.Font = Enum.Font.GothamBold
alertLabel.TextSize = 16
alertLabel.Parent = frame

-- Botón
local button = Instance.new("TextButton")
button.Size = UDim2.new(0.9, 0, 0, 40)
button.Position = UDim2.new(0.05, 0, 0.5, -10)
button.BackgroundColor3 = Color3.fromRGB(0, 170, 100)
button.Text = "AKUN ANTI-LAG"
button.Font = Enum.Font.GothamBold
button.TextSize = 18
button.TextColor3 = Color3.fromRGB(255,255,255)
button.Parent = frame
Instance.new("UICorner", button).CornerRadius = UDim.new(0, 8)

-- Animación de color del botón
local hue2 = 0.35
RunService.Heartbeat:Connect(function(dt)
	hue2 = (hue2 + dt * 0.1) % 1
	button.BackgroundColor3 = Color3.fromHSV(hue2, 0.8, 1)
end)

-- Palabras bloqueadas: SOLO "aura" y "fur"
local palabrasBloqueadas = {"aura", "fur"}

-- Función de limpieza
local function limpiarAccesorios(character)
	if not character then return end
	local encontrado = false

	for _, item in ipairs(character:GetChildren()) do
		if item:IsA("Accessory") then
			local nombre = item.Name:lower()
			for _, palabra in ipairs(palabrasBloqueadas) do
				if string.find(nombre, palabra) then
					item:Destroy()
					encontrado = true
					break
				end
			end
		end
	end

	if encontrado then
		-- Highlight
		if not character:FindFirstChild("ScripterESP") then
			local esp = Instance.new("Highlight")
			esp.Name = "ScripterESP"
			esp.Adornee = character
			esp.FillColor = Color3.fromRGB(255,0,0)
			esp.OutlineColor = Color3.fromRGB(255,255,255)
			esp.Parent = character
		end

		-- Billboard "Scripter"
		if not character:FindFirstChild("ScripterTag") then
			local head = character:FindFirstChild("Head")
			if head then
				local billboard = Instance.new("BillboardGui")
				billboard.Name = "ScripterTag"
				billboard.Size = UDim2.new(0,100,0,50)
				billboard.Adornee = head
				billboard.AlwaysOnTop = true
				billboard.Parent = character

				local textLabel = Instance.new("TextLabel")
				textLabel.Size = UDim2.new(1,0,1,0)
				textLabel.BackgroundTransparency = 1
				textLabel.Text = "Scripter"
				textLabel.TextColor3 = Color3.fromRGB(255,0,0)
				textLabel.TextStrokeTransparency = 0
				textLabel.Font = Enum.Font.GothamBold
				textLabel.TextSize = 14
				textLabel.Parent = billboard
			end
		end

		-- Alerta arriba
		alertLabel.Text = "FPS Devourer Detected"
		task.delay(3, function()
			alertLabel.Text = ""
		end)
	end
end

-- Conectar limpieza automática a un jugador
local function conectarJugador(plr)
	if plr.Character then
		limpiarAccesorios(plr.Character)
	end
	plr.CharacterAdded:Connect(function(char)
		limpiarAccesorios(char)
	end)
end

-- Conectar a los jugadores actuales
for _, plr in ipairs(Players:GetPlayers()) do
	conectarJugador(plr)
end

-- Conectar a los nuevos jugadores
Players.PlayerAdded:Connect(conectarJugador)

-- Botón manual
button.MouseButton1Click:Connect(function()
	button.Text = "BUSCANDO..."
	for _, plr in ipairs(Players:GetPlayers()) do
		if plr.Character then
			limpiarAccesorios(plr.Character)
		end
	end
	task.wait(1)
	button.Text = "AKUN ANTI-LAG"
end)

-- Escaneo constante cada 2 segundos
task.spawn(function()
	while true do
		for _, plr in ipairs(Players:GetPlayers()) do
			if plr.Character then
				limpiarAccesorios(plr.Character)
			end
		end
		task.wait(2) -- cada 2 segundos
	end
end)
