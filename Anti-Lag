local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "AkunAntiLagGUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- Frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 220, 0, 100)
frame.Position = UDim2.new(0, 20, 1, -180)
frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
frame.BorderSizePixel = 0
frame.Parent = screenGui
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 12)

-- Título arcoíris
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, -10, 0, 28)
title.Position = UDim2.new(0, 5, 0, 5)
title.BackgroundTransparency = 1
title.Font = Enum.Font.GothamBold
title.Text = "LUMORA ANTI LAG"
title.TextSize = 18
title.TextColor3 = Color3.new(1,1,1)
title.Parent = frame

local hue = 0
RunService.Heartbeat:Connect(function(dt)
	hue = (hue + dt * 0.3) % 1
	title.TextColor3 = Color3.fromHSV(hue, 1, 1)
end)

-- Alerta
local alertLabel = Instance.new("TextLabel")
alertLabel.Size = UDim2.new(1, 0, 0, 20)
alertLabel.Position = UDim2.new(0, 0, 0, -25)
alertLabel.BackgroundTransparency = 1
alertLabel.Text = ""
alertLabel.TextColor3 = Color3.fromRGB(255, 0, 0)
alertLabel.Font = Enum.Font.GothamBold
alertLabel.TextSize = 16
alertLabel.Parent = frame

-- Botón
local button = Instance.new("TextButton")
button.Size = UDim2.new(0.9, 0, 0, 40)
button.Position = UDim2.new(0.05, 0, 0.5, -10)
button.BackgroundColor3 = Color3.fromRGB(0, 170, 100)
button.Text = "AKUN ANTI-LAG"
button.Font = Enum.Font.GothamBold
button.TextSize = 18
button.TextColor3 = Color3.fromRGB(255,255,255)
button.Parent = frame
Instance.new("UICorner", button).CornerRadius = UDim.new(0, 8)

-- Animación de color
local hue2 = 0.35
RunService.Heartbeat:Connect(function(dt)
	hue2 = (hue2 + dt * 0.1) % 1
	button.BackgroundColor3 = Color3.fromHSV(hue2, 0.8, 1)
end)

-- Función que limpia auras de un personaje
local function limpiarAurasDeCharacter(character)
	if not character then return end
	local foundAura = false

	for _, item in ipairs(character:GetChildren()) do
		if item:IsA("Accessory") and string.find(item.Name:lower(), "aura") then
			item:Destroy()
			foundAura = true
		end
	end

	if foundAura then
		-- Highlight
		if not character:FindFirstChild("ScripterESP") then
			local esp = Instance.new("Highlight")
			esp.Name = "ScripterESP"
			esp.Adornee = character
			esp.FillColor = Color3.fromRGB(255,0,0)
			esp.OutlineColor = Color3.fromRGB(255,255,255)
			esp.Parent = character
		end

		-- Billboard "Scripter"
		if not character:FindFirstChild("ScripterTag") then
			local head = character:FindFirstChild("Head")
			if head then
				local billboard = Instance.new("BillboardGui")
				billboard.Name = "ScripterTag"
				billboard.Size = UDim2.new(0,100,0,50)
				billboard.Adornee = head
				billboard.AlwaysOnTop = true
				billboard.Parent = character

				local textLabel = Instance.new("TextLabel")
				textLabel.Size = UDim2.new(1,0,1,0)
				textLabel.BackgroundTransparency = 1
				textLabel.Text = "Scripter"
				textLabel.TextColor3 = Color3.fromRGB(255,0,0)
				textLabel.TextStrokeTransparency = 0
				textLabel.Font = Enum.Font.GothamBold
				textLabel.TextSize = 14
				textLabel.Parent = billboard
			end
		end

		-- Alerta
		alertLabel.Text = "FPS Devourer Detected"
		task.delay(3, function()
			alertLabel.Text = ""
		end)
	end
end

-- Función que limpia auras de un jugador
local function limpiarAurasDePlayer(plr)
	if plr.Character then
		limpiarAurasDeCharacter(plr.Character)
	end
	-- Cada vez que reaparece
	plr.CharacterAdded:Connect(limpiarAurasDeCharacter)
end

-- Conectar a jugadores existentes
for _, plr in ipairs(Players:GetPlayers()) do
	limpiarAurasDePlayer(plr)
end

-- Conectar a jugadores nuevos
Players.PlayerAdded:Connect(function(plr)
	limpiarAurasDePlayer(plr)
end)

-- Botón manual
button.MouseButton1Click:Connect(function()
	button.Text = "BUSCANDO AURAS..."
	for _, plr in ipairs(Players:GetPlayers()) do
		limpiarAurasDePlayer(plr)
	end
	task.wait(1)
	button.Text = "AKUN ANTI-LAG"
end)
