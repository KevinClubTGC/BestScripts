local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "AkunAntiLagGUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- Frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 220, 0, 100)
frame.Position = UDim2.new(0, 20, 1, -180)
frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
frame.BorderSizePixel = 0
frame.Parent = screenGui
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 12)

-- Título arcoíris
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, -10, 0, 28)
title.Position = UDim2.new(0, 5, 0, 5)
title.BackgroundTransparency = 1
title.Font = Enum.Font.GothamBold
title.Text = "LUMORA ANTI LAG"
title.TextSize = 18
title.TextColor3 = Color3.new(1,1,1)
title.Parent = frame

local hue = 0
RunService.Heartbeat:Connect(function(dt)
	hue = (hue + dt * 0.3) % 1
	title.TextColor3 = Color3.fromHSV(hue, 1, 1)
end)

-- Botón (manual extra)
local button = Instance.new("TextButton")
button.Size = UDim2.new(0.9, 0, 0, 40)
button.Position = UDim2.new(0.05, 0, 0.5, -10)
button.BackgroundColor3 = Color3.fromRGB(0, 170, 100)
button.Text = "AKUN ANTI-LAG"
button.Font = Enum.Font.GothamBold
button.TextSize = 18
button.TextColor3 = Color3.fromRGB(255,255,255)
button.Parent = frame
Instance.new("UICorner", button).CornerRadius = UDim.new(0, 8)

-- Animación de color del botón
local hue2 = 0.35
RunService.Heartbeat:Connect(function(dt)
	hue2 = (hue2 + dt * 0.1) % 1
	button.BackgroundColor3 = Color3.fromHSV(hue2, 0.8, 1)
end)

-- Función para limpiar accesorios (menos del local player)
local function limpiarAccesorios(character, owner)
	if not character then return end
	if owner == player then return end -- NO limpiar mis accesorios
	for _, item in ipairs(character:GetChildren()) do
		if item:IsA("Accessory") then
			item:Destroy()
		end
	end
end

-- Conectar limpieza automática a un jugador
local function conectarJugador(plr)
	if plr.Character then
		limpiarAccesorios(plr.Character, plr)
	end
	plr.CharacterAdded:Connect(function(char)
		limpiarAccesorios(char, plr)
	end)
end

-- Conectar a los jugadores actuales
for _, plr in ipairs(Players:GetPlayers()) do
	conectarJugador(plr)
end

-- Conectar a los nuevos jugadores
Players.PlayerAdded:Connect(conectarJugador)

-- Botón manual
button.MouseButton1Click:Connect(function()
	button.Text = "LIMPIANDO..."
	for _, plr in ipairs(Players:GetPlayers()) do
		if plr.Character then
			limpiarAccesorios(plr.Character, plr)
		end
	end
	task.wait(1)
	button.Text = "AKUN ANTI-LAG"
end)

-- Escaneo automático cada 2 segundos
task.spawn(function()
	while true do
		for _, plr in ipairs(Players:GetPlayers()) do
			if plr.Character then
				limpiarAccesorios(plr.Character, plr)
			end
		end
		task.wait(2)
	end
end)
